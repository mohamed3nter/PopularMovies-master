<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mohamedanter.popularmovies.DetailFragment">
    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#00868B">
        <TextView
            android:id="@+id/Movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:text="chappie"
            android:textColor="#FFFFF0"
            android:textSize="70sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="20dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/img" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="2015"
                android:textSize="35sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/Lenth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="120min"
                android:textSize="30sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="8.1/10"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_gravity="center"/>
            <Button
                android:paddingTop="15dp"
                android:id="@+id/favorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="NON FAVORITE"
                android:textSize="1dp"
                android:background="@drawable/nonfavorite"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="When the old-old-old-fashioned vampire Vlad arrives at the hotel for an impromptu family get-together, Hotel Transylvania is in for a collision of supernatural old-school and modern day cool."
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />
</LinearLayout>