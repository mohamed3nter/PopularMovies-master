<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mohamedanter.popularmovies.DetailFragment">
    <!-- Header aligned to top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:paddingTop="35sp"
            android:paddingBottom="35sp"
            android:text="mohamed"
            android:textColor="#FFFFF0"
            android:background="#00868B"
            android:textStyle="italic"
            android:textSize="40sp" />
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:attr/dividerVertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/img"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="?android:attr/dividerHorizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/Year"
                    android:text="2010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/Lenth"
                    android:text="120min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/rate"
                    android:text="10/10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/favorite"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/nonfavorite"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textColor="#000000"
        android:textSize="20sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />

</LinearLayout>